# Habilita mod_rewrite
RewriteEngine On

# Elimina www (opcional)
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

# Evita redirección de archivos y carpetas reales
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Ruta limpia: /admin/dashboard → /views/admin/admin_dashboard.php
RewriteRule ^admin/dashboard$ views/admin/admin_dashboard.php [L]

# Ruta limpia: /admin/usuarios → /views/admin/admin_altaUsuarios.php
RewriteRule ^admin/usuarios$ views/admin/admin_altaUsuarios.php [L]

# Ruta limpia: /admin/carga-masiva → /views/admin/admin_importarUsuarios.php
RewriteRule ^admin/carga-masiva$ views/admin/admin_importarUsuarios.php [L]

# Ruta limpia: /admin/pagos → /views/admin/admin_pagoFacturas.php
RewriteRule ^admin/pagos$ views/admin/admin_pagoFacturas.php [L]

# Ruta limpia para login y registro
RewriteRule ^login$ index.php [L]
RewriteRule ^register$ index.php [L]

# Fallback: si no hay coincidencia, redirige a index.php
RewriteRule ^.*$ index.php [L]
